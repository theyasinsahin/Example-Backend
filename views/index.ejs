<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Career Problems Questionnaire</title>
    <link rel="stylesheet" href="/css/index.css">
    <script defer src="/js/submitForm.js"></script>
    <script defer src="/js/verification.js"></script>
    <script defer src="/js/getDepartments.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>
<body>
    <div class="container">
        <h1>Kariyer sıkıntısı ölçeği</h1>
        <div id="verification-section">
            <form id="verification-form">
                <div class="personal-info">
                    <label for="email">School Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <button type="submit">Send Verification Code</button>
            </form>
        </div>
        <div id="code-section" style="display: none;">
            <form id="code-form">
                <label for="verification-code">Verification Code</label>
                <input type="text" id="verification-code" name="verification-code" required>
                <button type="submit">Verify Code</button>
            </form>
        </div>
        <form id="questionnaire" style="display: none;">
            <div class="section">
                <h2>Faculty and Department</h2>
                <div class="personal-info">
                    <label for="faculty">Faculty</label>
                    <select id="faculty" name="faculty" required>

                        <% faculties.forEach(faculty => { %>
                            <option value="<%= faculty.facultyid %>"> <%= faculty.facultyname%> </option>
                        <% }) %>
                       
                    </select>
                    <label for="department">Department</label>
                    <select id="department" name="department" required>

                        <% departments.forEach(department => { %>
                            <option value="<%= department.departmentid %>"> <%= department.departmentname%> </option>
                        <% }) %>
                     
                    </select>
                </div>
            </div>
            <div class="section">
                <% questions.forEach(question => { %>
                <div class="question">
                    <label><%= question.questionid %>. <%= question.question %></label>
                    <select name="q<%= question.questionid %>" required>
                        <option value="1">Tamamen Katılmıyorum</option>
                        <option value="2">Katılmıyorum</option>
                        <option value="3">Kısmen Katılmıyorum</option>
                        <option value="4">Kısmen Katılıyorum</option>
                        <option value="5">Katılıyorum</option>
                        <option value="6">Kesinlikle Katılıyorum</option>
                    </select>
                </div>
                <br>
                <% }) %>
            </div>
            <div class="g-recaptcha" data-sitekey="your-data-sitekey"></div>
            <button type="submit">Gönder</button>
        </form>
        <div id="result"></div>
    </div>
</body>
</html>
